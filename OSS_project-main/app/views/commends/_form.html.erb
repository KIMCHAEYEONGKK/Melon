<%= form_with(model: commend, local: true) do |form| %>
  
	<% if user_signed_in? %>
  	<div class="field" style="margin-top:100px;" >
	  <%= form.label :commend,"댓글" ,style:"font-size:15px;"%>
	  <div style="width:1008px;background-color: #f5f5f5;height:142px;display:block; margin-top:5px;">
		  <div style="position:relative; float:left; margin-top:30px; margin-left:20px;">
			  <img  style="width: 54px;height: 54px;" src="<%=current_user.profile_img%>">
			  
		<%end%>
		  </div>
		<%= form.text_area :commend , class:"commend_text "%>
		 <%= form.submit :commend , style:" width:72px; height:80px; margin-bottom:85px;margin-left:5px;" %>
	</div>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id , value: current_user.id%>
  </div>

  <div class="field">
    <%= form.hidden_field :album_id, value: @album.id %>
  </div>
<% end %>
